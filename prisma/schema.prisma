generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Borrow {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  toolName    String
  borrower    String
  borrowDate  DateTime
  returnDate  DateTime?
  status      String   @default("Open")
  condition   String   @default("Normal")
  createdAt   DateTime @default(now())
}

model Stock_ToolRoom {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  toolName   String
  brand      String?
  PN         String?
  spec       String?
  quantity   Int
  location   String
  createdAt  DateTime @default(now())
}

model stock_warehouse {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  toolName   String
  brand      String?
  PN         String?
  spec       String?
  quantity   Int
  location   String
  createdAt  DateTime @default(now())
}


